<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 
<hibernate-mapping>

<class  name="beans.Student" table="Student">

<id name="id" column="id">
<!-- <generator class="assigned"></generator> -->
</id>

<property name="fname" column="fname" type="string"></property>
<property name="lname" column="lname" type="string"></property>
<property name="contact" column="contact"  type="string"></property>
<property name="address" column="address" type="string"></property>
</class>

</hibernate-mapping>